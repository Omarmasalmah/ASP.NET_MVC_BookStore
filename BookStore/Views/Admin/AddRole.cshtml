@model BookStore.ViewModel.AddRoleViewModel

@{
    ViewData["Title"] = "Add Role";
}

<h1>Add role</h1>

<form asp-action="AddRole" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="RoleName" class="col-1 col-form-label"></label>
        <div class="col-3">
            <input asp-for="RoleName" class="form-control mb-3" placeholder="Name" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group col-4 mt-3">
        <button type="submit" class="btn btn-primary">Add role</button>
        <div>
            <a asp-action="ListAllRoles" class="btn btn-warning my-3"><i class="fa-solid fa-angles-left"></i> Back</a>
        </div>
    </div>
</form>
