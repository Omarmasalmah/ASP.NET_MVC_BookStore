@model BookStore.ViewModel.EditRoleViewModel

@{
    ViewData["Title"] = "Edit role";
}

<h1>Edit role</h1>

<form method="post" class="row">
    <div class="col-md-5">
        <div class="form-group row mt-3">
            <label asp-for="Id" class="col-md-3 col-form-label text-md-right">Role ID</label>
            <div class="col-md-9">
                <input asp-for="Id" disabled class="form-control text-center" style="font-size: 0.9em" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="RoleName" class="col-md-3 col-form-label text-md-right">Role Name</label>
            <div class="col-md-9">
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="mt-3 offset-md-3">
                <button type="submit" class="btn btn-success mr-2">Update <i class="fa-solid fa-check-double"></i></button>
                <a asp-action="ListAllRoles" class="btn btn-warning">Back <i class="fa-solid fa-angles-left"></i></a>
            </div>
        </div>
    </div>

    <div class="col-md-1"></div>

    <div class="col-md-6">
        <h3>Users with @Model.RoleName role</h3>

        <table class="table table-striped">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td>No users with @Model.RoleName role</td>
                </tr>
            }
        </table>
        <div class="mt-3">
            <a asp-action="EditUsersInRole" asp-route-id="@Model.Id" class="btn btn-primary">Add/Remove users in role</a>
        </div>
    </div>
</form>
